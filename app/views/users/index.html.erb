<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="file-link">
          <% if user_signed_in? %>
            <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <% end %>
          <% unless current_user == user ||
                    current_user.pending_invitation_for?(user) || 
                    current_user.friends_with?(user) || 
                    current_user.pending_request_from?(user) %>
            <%= link_to 'Add Friend',  user_friendships_path(id: user.id), class: 'profile-link', method: 'post' %>
            
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
